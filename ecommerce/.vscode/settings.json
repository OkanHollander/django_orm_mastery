{
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
    },
    "pylint.args": [
        "--max-line-length=88"
    ],
    "flake8.args": [
        "--max-line-lenght=88"
    ],
    "isort.arrs": [
        "--profile",
        "black"
    ],
    "editor.rulers": [
        88
    ]
}